{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-D DEBUG",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "test",
                "${workspaceFolder}/test.c", 
                "${workspaceFolder}/network.c", 
                "${workspaceFolder}/mnistReader.c", 
                "${workspaceFolder}/layer.c", 
                "${workspaceFolder}/functions.c",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}